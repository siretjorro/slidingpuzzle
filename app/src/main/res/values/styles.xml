<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Text" parent="">
        <!-- Base text styles with fonts, etc.-->
        <!-- Add custom Text styles as neede. For example Text.Body.16 or Text.Title, Text.Subtitle.-->
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
        <!-- <item name="fontFamily">@font/graphik_regular</item>-->
        <!-- <item name="android:lineHeight" tools:targetApi="p">@dimen/size_20</item>-->
        <!-- <item name="lineHeight">@dimen/size_20</item>-->
    </style>

    <style name="Text.Heading1">
        <item name="android:textSize">@dimen/text_32</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
        <item name="lineHeight">@dimen/text_48</item>
    </style>

    <style name="Text.Body16">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="lineHeight">@dimen/text_24</item>
    </style>

    <style name="Text.Body18">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="lineHeight">@dimen/text_24</item>
    </style>

    <style name="Text.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button">
        <item name="android:textAppearance">@style/Text.Button</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Button</item>
        <item name="backgroundTint">@color/grey</item>

        <!-- weird hack to force textColor defined in textAppearance -->
        <item name="android:textColor">@null</item>
    </style>

    <style name="ShapeAppearance.Button" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/size_24</item>
    </style>
</resources>